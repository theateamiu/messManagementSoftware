<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="2dp"
    tools:context=".settings.MessRegistrationActivity"
    >

    <ImageView
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:id="@+id/userImageView"
        android:layout_margin="2dp"
        android:src="@drawable/content_picture" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etManagerName"
        android:layout_alignTop="@+id/userImageView"
        android:layout_toRightOf="@+id/userImageView"
        android:layout_toEndOf="@+id/userImageView"
        android:hint="Enter Name" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etManagerAge"
        android:layout_below="@+id/etManagerName"
        android:layout_alignLeft="@+id/etManagerName"
        android:layout_alignStart="@+id/etManagerName"
        android:hint="Enter Age" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/etManagerPhoneNumber"
        android:layout_below="@+id/userImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp"
        android:hint="Phone Number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etManagerEmail"
        android:layout_below="@+id/etManagerPhoneNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Email"
        android:layout_margin="2dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etManagerProfession"
        android:layout_below="@+id/etManagerEmail"
        android:layout_alignLeft="@+id/etManagerEmail"
        android:layout_alignStart="@+id/etManagerEmail"
        android:hint="Profession" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etManagerPostalAddress"
        android:layout_below="@+id/etManagerProfession"
        android:layout_alignLeft="@+id/etManagerProfession"
        android:layout_alignStart="@+id/etManagerProfession"
        android:hint="Postal Address" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:layout_below="@+id/etManagerPostalAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Password" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etConfirmPassword"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Confirm Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/bSaveManager"
        android:layout_below="@+id/etConfirmPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>