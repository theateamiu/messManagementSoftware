<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theateamiu.mms" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".controllers.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".settings.SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".settings.ManagerRegistrationActivity"
            android:label="Manager Registration"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".settings.BoarderActivity"
            android:label="Boarder Registration"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".settings.MessRegistrationActivity"
            android:label="Mess Registration"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".controllers.BoarderListActivity"
            android:label="Boarder List"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".controllers.SummaryActivity"
            android:label="Summary"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".controllers.ManagerialListActivity"
            android:label="Managerial List"
            android:screenOrientation="portrait">

        </activity>

    </application>

</manifest>
